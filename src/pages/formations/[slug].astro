<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tab Navigation
    const tabLinks = document.querySelectorAll('.tab-link');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabLinks.forEach(link => {
      link.addEventListener('click', function() {
        const targetTab = this.dataset.tab;
        
        // Update active tab
        tabLinks.forEach(l => {
          l.classList.remove('active', 'border-blue-600', 'text-blue-600');
          l.classList.add('border-transparent', 'text-gray-500');
        });
        this.classList.add('active', 'border-blue-600', 'text-blue-600');
        this.classList.remove('border-transparent', 'text-gray-500');
        
        // Update active content
        tabContents.forEach(content => {
          content.classList.remove('active');
        });
        document.getElementById(targetTab).classList.add('active');
        
        // Smooth scroll to content
        document.getElementById(targetTab).scrollIntoView({ 
          behavior: 'smooth',
          block: 'start'
        });
      });
    });
    
    // FAQ Toggle
    document.querySelectorAll('.faq-toggle').forEach(toggle => {
      toggle.addEventListener('click', function() {
        const faqItem = this.closest('.faq-item');
        const answer = faqItem.querySelector('.faq-answer');
        const icon = this.querySelector('i[data-lucide="plus"], i[data-lucide="minus"]');
        
        const isOpen = !answer.classList.contains('hidden');
        
        if (isOpen) {
          answer.classList.add('hidden');
          icon.setAttribute('data-lucide', 'plus');
        } else {
          answer.classList.remove('hidden');
          icon.setAttribute('data-lucide', 'minus');
        }
        
        // Recreate icons
        lucide.createIcons();
      });
    });
    
    // Inscription Modal/Action
    function handleInscription() {
      alert('Redirection vers le formulaire d\'inscription...\n\nEn production, cette action ouvrirait :\n- Un modal d\'inscription\n- Une redirection vers Calendly\n- Un formulaire de contact dédié');
    }
    
    document.getElementById('inscriptionBtn')?.addEventListener('click', handleInscription);
    document.getElementById('sidebarInscriptionBtn')?.addEventListener('click', handleInscription);
    
    // PDF Download
    document.getElementById('demoPdfBtn')?.addEventListener('click', function() {
      alert('Téléchargement de la brochure...\n\nEn production, cette action :\n- Génèrerait un PDF personnalisé\n- Déclencherait un téléchargement\n- Enverrait par email si nécessaire');
    });
    
    // Contact Actions
    function handleContact() {
      alert('Contact avec un expert...\n\nEn production, cette action :\n- Ouvrirait un chat en direct\n- Afficherait les coordonnées\n- Proposer un rappel immédiat');
    }
    
    document.getElementById('sidebarContactBtn')?.addEventListener('click', handleContact);
    document.getElementById('expertContactBtn')?.addEventListener('click', handleContact);
    
    // Initialize icons
    lucide.createIcons();
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>

