  },
  {
    name: 'Transformation',
    subtitle: 'Pour aller plus loin',
    price: '850',
    duration: '6 mois',
    popular: false,
    features: [
      '12 sessions de coaching',
      'Mentorat professionnel inclus',
      'Accès réseau NOVA IMPÉRIA',
      'Formation complémentaire',
      'Garantie résultats'
    ],
    cta: 'Transformer',
    color: 'green'
  },
  {
    name: 'Excellence',
    subtitle: 'Programme premium',
    price: '1500',
    duration: '12 mois',
    popular: false,
    features: [
      'Coaching illimité',
      'Mentorat expert dédié',
      'Réseau professionnel premium',
      'Formations exclusives',
      'Événements networking',
      'Support prioritaire 24/7'
    ],
    cta: 'Devenir Élite',
    color: 'purple'
  }
];

const processSteps = [
  {
    number: '01',
    title: 'Diagnostic Initial',
    description: 'Analyse de vos besoins, objectifs et situation actuelle',
    icon: 'search',
    duration: '30min'
  },
  {
    number: '02',
    title: 'Plan Personnalisé',
    description: 'Création d\'une stratégie sur mesure adaptée à vos enjeux',
    icon: 'map',
    duration: '1 semaine'
  },
  {
    number: '03',
    title: 'Sessions d\'Accompagnement',
    description: 'Mise en œuvre avec suivi régulier et ajustements',
    icon: 'users',
    duration: 'Selon pack'
  },
